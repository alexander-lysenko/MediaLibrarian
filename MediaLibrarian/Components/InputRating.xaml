<UserControl x:Class="MediaLibrarian.Components.InputRating"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             x:Name="LayoutRoot"
             mc:Ignorable="d"
             d:DesignWidth="480"
             d:DesignHeight="32">
    <Grid DataContext="{Binding ElementName=LayoutRoot}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="2*" MinWidth="200" MaxWidth="320" />
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" Padding="0,4,4,4">
            <TextBlock Style="{DynamicResource Ellipsis}" Text="{Binding Label}" />
        </Border>
        <Border Grid.Column="1" Padding="0,4">
            <DatePicker
                VerticalAlignment="Center"
                Text="{Binding Value}" />
        </Border>
    </Grid>
</UserControl>