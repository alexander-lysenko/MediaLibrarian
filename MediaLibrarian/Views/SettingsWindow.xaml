<Window x:Class="MediaLibrarian.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Width="800"
        Height="600"
        SizeToContent="WidthAndHeight"
        WindowStyle="ToolWindow"
        WindowStartupLocation="CenterScreen"
        Title="{DynamicResource Settings.Title}">
    <DockPanel Margin="8">
        <WrapPanel
            DockPanel.Dock="Bottom"
            HorizontalAlignment="Right"
            Margin="0,8,0,0">
            <Button
                Margin="0"
                Content="{DynamicResource Buttons.Save}" />
            <Button
                Margin="8,0,0,0"
                Content="{DynamicResource Buttons.Cancel}" />
        </WrapPanel>
        <TabControl>
            <TabItem Header="1"></TabItem>
            <TabItem Header="2"></TabItem>
        </TabControl>
    </DockPanel>
</Window>